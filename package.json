{
	"name": "vs-fluig",
	"displayName": "vs-fluig",
	"description": "vs-fluig",
	"version": "0.0.1",
	"engines": {
		"vscode": "^1.38.0"
	},
	"categories": [
		"Other"
	],
	"activationEvents": [
		"onCommand:vs-fluig.add-server",
		"onCommand:vs-fluig.delete-server",
		"onCommand:vs-fluig.connect-server",
		"onView:fluig-servers"
	],
	"main": "./out/extension.js",
	"contributes": {
		"commands": [
			{
				"command": "vs-fluig.add-server",
				"title": "Adicionar Server",
				"icon": {
					"light": "resources/light/add.png",
					"dark": "resources/dark/add.png"
				}
			},
			{
				"command": "vs-fluig.delete-server",
				"title": "Deletar Server",
				"icon": {
					"light": "resources/light/delete.png",
					"dark": "resources/dark/delete.png"
				}
			},
			{
				"command": "vs-fluig.connect-server",
				"title": "Conectar"
			},
			{
				"command": "vs-fluig.rename-server",
				"title": "Renomear"
			}
		],
		"viewsContainers": {
			"activitybar": [
				{
					"id": "fluig-server",
					"title": "Fluig Server",
					"icon": "resources/logo.png"
				}
			]
		},
		"views": {
			"fluig-server": [
				{
					"id": "fluig-views",
					"name": "Visualizações"
				},
				{
					"id": "fluig-servers",
					"name": "Servidores"
				}
			]
		},
		"menus": {
			"view/title": [
				{
					"command": "vs-fluig.add-server",
					"when": "view == fluig-servers",
					"group": "navigation"
				}
			],
			"view/item/context": [
				{
					"command": "vs-fluig.connect-server",
					"when": "view == fluig-servers && viewItem == serverItem",
					"group": "AAfluigServer@1"
				},
				{
					"command": "vs-fluig.rename-server",
					"when": "view == fluig-servers && viewItem == serverItem",
					"group": "ABfluigServer@2"
				},
				{
					"command": "vs-fluig.delete-server",
					"when": "view == fluig-servers && viewItem == serverItem",
					"group": "inline"
				}
			]
		}
	},
	"scripts": {
		"vscode:prepublish": "yarn run compile",
		"compile": "tsc -p ./",
		"watch": "tsc -watch -p ./",
		"pretest": "yarn run compile",
		"test": "node ./out/test/runTest.js"
	},
	"devDependencies": {
		"@types/glob": "^7.1.1",
		"@types/mocha": "^5.2.6",
		"@types/node": "^10.12.21",
		"@types/vscode": "^1.38.0",
		"glob": "^7.1.4",
		"mocha": "^6.1.4",
		"tslint": "^5.12.1",
		"typescript": "^3.3.1",
		"vscode-test": "^1.2.0"
	},
	"dependencies": {
		"soap": "^0.29.0",
		"strip-json-comments": "^3.0.1",
		"template-literal": "^1.0.3"
	}
}
